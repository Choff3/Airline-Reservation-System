<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinegui.AddFlightsController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="toCity" layoutX="14.0" layoutY="44.0" text="Origin City" />
            <TextField fx:id="tdCity" layoutX="237.0" layoutY="44.0" text="Destination City" />
            <TextField fx:id="ttTime" layoutX="14.0" layoutY="97.0" text="Takeoff Time" />
            <TextField fx:id="taTime" layoutX="237.0" layoutY="97.0" text="Arrival Time" />
            <TextField fx:id="tAirline" layoutX="14.0" layoutY="152.0" text="Airline" />
            <TextField fx:id="tDate" layoutX="237.0" layoutY="152.0" text="Date" />
            <Button layoutX="165.0" layoutY="200.0" mnemonicParsing="false" onAction="#addFlight" text="Create Flight" />
            <MenuBar prefHeight="29.0" prefWidth="640.0">
              <menus>
                <Menu mnemonicParsing="false" text="Admin Menu">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#adminMenu" text="Go back to administrator Menu" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Customer Menu">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#customerMenu" text="Go back to customer menu" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Logout">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
    </AnchorPane>
  </children>
</VBox>
